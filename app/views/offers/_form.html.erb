    </div>
  </div>

  <hr/>

  <h2><%= t('items.contact') %></h2>
  <div class="row">
    <div class="col-md-6">
      <%= f.text_field :owner_name,
                       placeholder: t('activerecord.attributes.item.owner_name'),
                       append: content_tag(:i, "", class: "fa fa-globe icon"),
                       hide_label: true %>
    </div>
    <div class="col-md-6">
      <%= f.text_field :email,
                       placeholder: t('activerecord.attributes.item.email'),
                       append: content_tag(:i, "", class: "fa fa-lock icon"),
                       hide_label: true,
                       disabled: type != :create %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-1 explanation">
      <i class="fa fa-info icon"></i>
    </div>
    <div class="col-md-11">
      <%= tm 'privacy.explanation', @offer %>
    </div>
  </div>

  <hr/>

  <div class="row">
    <div class="col-md-12">
      <div class="form-actions">
        <%= f.submit nil, class: 'btn btn-primary' %>
        <%= link_to t('helpers.links.cancel'), offers_path, class: 'btn btn-default' %>
      </div>
    </div>
  </div>

</div>
